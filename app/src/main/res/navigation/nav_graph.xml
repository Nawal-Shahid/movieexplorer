<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.movieexplorer.fragment.HomeFragment"
        android:label="Popular Movies"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_navigation_home_to_navigation_detail"
            app:destination="@id/navigation_detail" />

    </fragment>

    <!-- Search Fragment -->
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.movieexplorer.fragment.SearchFragment"
        android:label="Search Movies"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_navigation_search_to_navigation_detail"
            app:destination="@id/navigation_detail" />

    </fragment>

    <!-- Favorites Fragment -->
    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.example.movieexplorer.fragment.FavoritesFragment"
        android:label="My Favorites"
        tools:layout="@layout/fragment_favorites">

        <action
            android:id="@+id/action_navigation_favorites_to_navigation_detail"
            app:destination="@id/navigation_detail" />

    </fragment>

    <!-- Profile Fragment -->
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.movieexplorer.fragment.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <!-- Detail Fragment -->
    <fragment
        android:id="@+id/navigation_detail"
        android:name="com.example.movieexplorer.fragment.DetailFragment"
        android:label="Movie Details"
        tools:layout="@layout/fragment_detail">

        <argument
            android:name="movie_id"
            app:argType="integer" />

    </fragment>

</navigation>