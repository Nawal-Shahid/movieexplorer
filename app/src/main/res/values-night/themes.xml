<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme variants -->
    <style name="Base.Theme.MovieExplorer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark theme customization; removed forceDarkAllowed (API 29+) to support minSdk 24 -->
        <item name="android:statusBarColor">@color/primary_container</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>

    <!-- Dark splash screen theme (custom) -->
    <style name="Theme.MovieExplorer.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:statusBarColor">@color/primary_container</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>
</resources>